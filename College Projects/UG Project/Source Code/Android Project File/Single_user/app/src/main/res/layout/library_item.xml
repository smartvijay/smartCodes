<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.abishek.single_user.Library_Item">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <TextView
                android:id="@+id/tv_bookTitle"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/text_border"
                android:gravity="center"
                android:padding="4dp"
                android:text="Engineering Mathemtics"
                android:maxLines="2"
                android:textSize="18dp"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/subcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_bookTitle"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:padding="2dp"
                android:text="Account Number"
                android:textColor="#000000"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tv_accountNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/subcode"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:padding="5dp"
                android:text="556345"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/mark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/subcode"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_below="@+id/tv_bookTitle"
                android:layout_marginRight="20dp"
                android:padding="5dp"
                android:text="Resource Type"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/tv_bookResource"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/mark"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:padding="5dp"
                android:text="Book"
                android:textSize="15dp" />

            <View
                android:id="@+id/line_lib1"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_below="@+id/tv_bookResource"
                android:layout_marginTop="5dp"
                android:background="@drawable/line" />

            <TextView
                android:id="@+id/subcode1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line_lib1"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:padding="2dp"
                android:text="Issue Date"
                android:textColor="#000000"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/subDis1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/subcode1"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_below="@+id/line_lib1"
                android:layout_marginRight="20dp"
                android:padding="5dp"
                android:text="Due Date"
                android:textColor="#000000"
                android:textSize="15dp" />


            <TextView
                android:id="@+id/tv_bookIssueDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/subcode1"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:padding="5dp"
                android:text="11-07-2017"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tv_bookDueDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/subDis1"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:padding="5dp"
                android:text="11-09-2017"
                android:textSize="15dp" />

            <View
                android:id="@+id/view4"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_below="@id/tv_bookDueDate"
                android:background="@drawable/line"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/subcode11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view4"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:padding="2dp"
                android:text="Return Date"
                android:textColor="#000000"
                android:textSize="15dp" />
            <TextView
                android:id="@+id/tv_bookReturnDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/subcode11"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:padding="5dp"
                android:text=""
                android:textSize="15dp" />

            <TextView
                android:id="@+id/subDis11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/subcode11"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_below="@+id/line_lib1"
                android:layout_marginRight="20dp"
                android:padding="5dp"
                android:text="Status"
                android:textColor="#000000"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tv_bookStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/subDis11"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:padding="5dp"
                android:text="Issued"
                android:textSize="15dp" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>