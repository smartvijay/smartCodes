<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/smoke"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".MainActivity">


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/smoke"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:src="@drawable/online_class_course"></ImageView>

            <LinearLayout
                android:id="@+id/module_relative_layout_one"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/top_tracker_image"
                android:layout_gravity="center_horizontal"
                android:focusable="true"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:focusableInTouchMode="true"
                android:orientation="horizontal" >

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/module_card_one"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    app:cardUseCompatPadding="true"
                    app:cardElevation="2dp"
                    app:cardMaxElevation="2dp"
                    android:background="@color/module_card_one"
                    android:backgroundTint="@color/module_card_one"
                    app:cardBackgroundColor="@color/module_card_one"
                    android:theme="@style/Theme.MaterialComponents.Light">


                    <ImageView
                        android:id="@+id/module_image_one"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/module_prevent_tthree"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <LinearLayout
                        android:id="@+id/module_linear_layout_one"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/module_text_one"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:padding="2dp"
                            android:textStyle="bold"
                            android:textSize="12dp"
                            android:text="Register"
                            android:textAppearance="?attr/textAppearanceBody1" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/module_card_two"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:layout_toRightOf="@+id/module_card_one"
                    app:cardElevation="2dp"
                    app:cardMaxElevation="2dp"
                    android:background="@color/module_card_one"
                    android:backgroundTint="@color/module_card_one"
                    app:cardBackgroundColor="@color/module_card_one"
                    android:theme="@style/Theme.MaterialComponents.Light"
                    app:cardUseCompatPadding="true">


                    <ImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/module_image_two"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/module_appoinment"
                        android:layout_gravity="center_horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <LinearLayout
                        android:id="@+id/module_layout_two"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="2dp"
                            android:gravity="center_horizontal"
                            android:textStyle="bold"
                            android:textSize="12dp"
                            android:text="C"
                            android:textAppearance="?attr/textAppearanceBody2" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/module_card_three"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    app:cardElevation="2dp"
                    app:cardMaxElevation="2dp"
                    android:background="@color/module_card_one"
                    android:backgroundTint="@color/module_card_one"
                    app:cardBackgroundColor="@color/module_card_one"
                    android:layout_toRightOf="@+id/module_card_two"
                    android:theme="@style/Theme.MaterialComponents.Light"
                    app:cardUseCompatPadding="true">

                    <ImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/module_image_three"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/module_labs"
                        android:layout_gravity="center_horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <LinearLayout
                        android:id="@+id/module_layout_three"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="2dp"
                            android:gravity="center_horizontal"
                            android:text="C++"
                            android:textStyle="bold"
                            android:textSize="12dp"
                            android:textAppearance="?attr/textAppearanceBody2" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/module_card_four"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    app:cardElevation="2dp"
                    app:cardMaxElevation="2dp"
                    android:background="@color/module_card_one"
                    android:backgroundTint="@color/module_card_one"
                    app:cardBackgroundColor="@color/module_card_one"
                    android:layout_toRightOf="@+id/module_card_three"
                    android:theme="@style/Theme.MaterialComponents.Light"
                    app:cardUseCompatPadding="true">

                    <ImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/module_image_four"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/module_counseling_one"
                        android:layout_gravity="center_horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <LinearLayout
                        android:id="@+id/module_layout_four"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="2dp"
                            android:textStyle="bold"
                            android:textSize="12dp"
                            android:gravity="center_horizontal"
                            android:text="Design"
                            android:textAppearance="?attr/textAppearanceBody2" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/module_relative_layout_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:gravity="center"
                android:layout_below="@+id/module_relative_layout_one"
                android:focusableInTouchMode="true"
                android:orientation="horizontal" >

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/module_card_five"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    app:cardElevation="2dp"
                    app:cardMaxElevation="2dp"
                    android:background="@color/module_card_one"
                    android:backgroundTint="@color/module_card_one"
                    app:cardBackgroundColor="@color/module_card_one"
                    android:theme="@style/Theme.MaterialComponents.Light"
                    app:cardUseCompatPadding="true">

                    <ImageView
                        android:id="@+id/module_image_five"
                        android:layout_width="26dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/module_store"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <LinearLayout
                        android:id="@+id/module_linear_layout_five"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/module_text_five"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="2dp"
                            android:textStyle="bold"
                            android:textSize="12dp"
                            android:gravity="center_horizontal"
                            android:text="Java"
                            android:textAppearance="?attr/textAppearanceBody2" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/module_card_six"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    app:cardElevation="2dp"
                    app:cardMaxElevation="2dp"
                    android:background="@color/module_card_one"
                    android:backgroundTint="@color/module_card_one"
                    app:cardBackgroundColor="@color/module_card_one"
                    android:layout_toRightOf="@+id/module_card_five"
                    android:theme="@style/Theme.MaterialComponents.Light"
                    app:cardUseCompatPadding="true">

                    <ImageView
                        android:id="@+id/module_image_six"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/module_symptoms"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <LinearLayout
                        android:id="@+id/module_layout_six"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="2dp"
                            android:textStyle="bold"
                            android:textSize="12dp"
                            android:gravity="center_horizontal"
                            android:text="Html"
                            android:textAppearance="?attr/textAppearanceBody2" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/module_card_seven"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    app:cardElevation="2dp"
                    app:cardMaxElevation="2dp"
                    android:background="@color/module_card_one"
                    android:backgroundTint="@color/module_card_one"
                    app:cardBackgroundColor="@color/module_card_one"
                    android:layout_toRightOf="@+id/module_card_six"
                    android:theme="@style/Theme.MaterialComponents.Light"
                    app:cardUseCompatPadding="true">

                    <ImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/module_image_seven"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/module_admission"
                        android:layout_gravity="center_horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <LinearLayout
                        android:id="@+id/module_layout_seven"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="2dp"
                            android:textStyle="bold"
                            android:textSize="12dp"
                            android:gravity="center_horizontal"
                            android:text="Civil"
                            android:textAppearance="?attr/textAppearanceBody2" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/module_card_eight"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    app:cardElevation="2dp"
                    app:cardMaxElevation="2dp"
                    android:background="@color/module_card_one"
                    android:backgroundTint="@color/module_card_one"
                    app:cardBackgroundColor="@color/module_card_one"
                    android:layout_toRightOf="@+id/module_card_seven"
                    android:theme="@style/Theme.MaterialComponents.Light"
                    app:cardUseCompatPadding="true">

                    <ImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/module_image_eight"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/module_map"
                        android:layout_gravity="center_horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <LinearLayout
                        android:id="@+id/module_layout_eight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textSize="12dp"
                            android:padding="2dp"
                            android:gravity="center_horizontal"
                            android:text="Python"
                            android:textAppearance="?attr/textAppearanceBody2" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/module_relative_layout_three"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusable="true"
                android:gravity="center"
                android:layout_below="@+id/module_relative_layout_two"
                android:focusableInTouchMode="true"
                android:orientation="horizontal" >

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/module_card_nine"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    app:cardElevation="2dp"
                    app:cardMaxElevation="2dp"
                    android:theme="@style/Theme.MaterialComponents.Light"
                    app:cardUseCompatPadding="true">

                    <ImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/module_image_nine"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/module_contact"
                        android:layout_gravity="center_horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <LinearLayout
                        android:id="@+id/module_linear_layout_nine"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/module_text_nine"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="2dp"
                            android:textStyle="bold"
                            android:textSize="12dp"
                            android:gravity="center_horizontal"
                            android:text="Redhat"
                            android:textAppearance="?attr/textAppearanceBody2" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/module_card_ten"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    app:cardElevation="2dp"
                    app:cardMaxElevation="2dp"
                    android:layout_toRightOf="@+id/module_card_nine"
                    android:theme="@style/Theme.MaterialComponents.Light"
                    app:cardUseCompatPadding="true">

                    <ImageView
                        android:id="@+id/module_image_ten"
                        android:layout_width="30dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="15dp"
                        android:src="@drawable/module_geofence_one"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <LinearLayout
                        android:id="@+id/module_layout_ten"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:orientation="vertical"
                        android:padding="8dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:padding="2dp"
                            android:text="UPSE"
                            android:textStyle="bold"
                            android:textSize="12dp"
                            android:textAppearance="?attr/textAppearanceBody2" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/module_card_eleven"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    app:cardElevation="2dp"
                    app:cardMaxElevation="2dp"
                    android:layout_toRightOf="@+id/module_card_ten"
                    android:theme="@style/Theme.MaterialComponents.Light"
                    app:cardUseCompatPadding="true">

                    <ImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/module_image_eleven"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/module_volunteer_three"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <LinearLayout
                        android:id="@+id/module_layout_eleven"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:padding="2dp"
                            android:textStyle="bold"
                            android:textSize="12dp"
                            android:text="Android"
                            android:textAppearance="?attr/textAppearanceBody2" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/module_card_twelve"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    app:cardElevation="2dp"
                    app:cardMaxElevation="2dp"
                    android:layout_toRightOf="@+id/module_card_eleven"
                    android:theme="@style/Theme.MaterialComponents.Light"
                    app:cardUseCompatPadding="true">

                    <ImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/module_image_twelve"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/module_assesmet"
                        android:layout_gravity="center_horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <LinearLayout
                        android:id="@+id/module_layout_twelve"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="2dp"
                            android:textStyle="bold"
                            android:textSize="12dp"
                            android:gravity="center_horizontal"
                            android:text="Website"
                            android:textAppearance="?attr/textAppearanceBody2" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>


