<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/smoke"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView">


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            // card media


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/preventive_card_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                app:cardElevation="2dp"
                app:cardMaxElevation="2dp"
                android:background="@color/module_card_one"
                android:backgroundTint="@color/module_card_one"
                app:cardBackgroundColor="@color/module_card_one"
                android:theme="@style/Theme.MaterialComponents.Light">


                <LinearLayout
                    android:id="@+id/module_linear_layout_one"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/youtube_video_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginBottom="30dp"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:text="Seven steps to prevent the spread of the virus"
                        android:textSize="15dp" />

                    <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
                        android:id="@+id/youtubeViewOne"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        app:layout_constraintTop_toBottomOf="@id/title"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_margin="2dp"
                        app:videoId="8c_UJwLq8PI"
                        app:autoPlay="false"
                        app:showFullScreenButton="false"/>
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/preventive_card_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                app:cardElevation="2dp"
                app:cardMaxElevation="2dp"
                android:background="@color/module_card_one"
                android:backgroundTint="@color/module_card_one"
                app:cardBackgroundColor="@color/module_card_one"
                android:theme="@style/Theme.MaterialComponents.Light">


                <LinearLayout
                    android:id="@+id/module_linear_layout_two"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/youtube_video_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginBottom="20dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:text="Novel coronavirus (2019-nCoV)"
                        android:textSize="15dp" />

                    <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
                        android:id="@+id/youtubeViewTwo"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        app:layout_constraintTop_toBottomOf="@id/title"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_margin="2dp"
                        app:videoId="mOV1aBVYKGA"
                        app:autoPlay="false"
                        app:showFullScreenButton="false"/>
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/preventive_card_three"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                app:cardElevation="2dp"
                app:cardMaxElevation="2dp"
                android:background="@color/module_card_one"
                android:backgroundTint="@color/module_card_one"
                app:cardBackgroundColor="@color/module_card_one"
                android:theme="@style/Theme.MaterialComponents.Light">


                <LinearLayout
                    android:id="@+id/module_linear_layout_three"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/youtube_video_three"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginBottom="20dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:text="How to protect yourself against COVID-19"
                        android:textSize="15dp" />

                    <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
                        android:id="@+id/youtubeViewThree"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        app:layout_constraintTop_toBottomOf="@id/title"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_margin="2dp"
                        app:videoId="1APwq1df6Mw"
                        app:autoPlay="false"
                        app:showFullScreenButton="false"/>
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/preventive_card_four"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                app:cardElevation="2dp"
                app:cardMaxElevation="2dp"
                android:background="@color/module_card_one"
                android:backgroundTint="@color/module_card_one"
                app:cardBackgroundColor="@color/module_card_one"
                android:theme="@style/Theme.MaterialComponents.Light">


                <LinearLayout
                    android:id="@+id/module_linear_layout_four"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/youtube_video_four"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginBottom="20dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:text="WHO: How to handwash? "
                        android:textSize="15dp" />

                    <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
                        android:id="@+id/youtubeViewFour"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        app:layout_constraintTop_toBottomOf="@id/title"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_margin="2dp"
                        app:videoId="5DGwOJXSxqg"
                        app:autoPlay="false"
                        app:showFullScreenButton="false"/>
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/preventive_card_five"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                app:cardElevation="2dp"
                app:cardMaxElevation="2dp"
                android:background="@color/module_card_one"
                android:backgroundTint="@color/module_card_one"
                app:cardBackgroundColor="@color/module_card_one"
                android:theme="@style/Theme.MaterialComponents.Light">


                <LinearLayout
                    android:id="@+id/module_linear_layout_five"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/youtube_video_five"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginBottom="20dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:text="COVID-19 Animation"
                        android:textSize="15dp" />

                    <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
                        android:id="@+id/youtubeViewFive"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        app:layout_constraintTop_toBottomOf="@id/title"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_margin="2dp"
                        app:videoId="9Ay4u7OYOhA"
                        app:autoPlay="false"
                        app:showFullScreenButton="false"/>
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>

